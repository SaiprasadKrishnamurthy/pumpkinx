<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
    http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">
	<managed-bean>
		<managed-bean-name>searchArtifacts</managed-bean-name>
		<managed-bean-class>org.sai.pumpkinx.ui.beans.SearchArtifactsController</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>viewArtifact</managed-bean-name>
		<managed-bean-class>org.sai.pumpkinx.ui.beans.ViewArtifactController</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
		<managed-property>
			<property-name>diffSource</property-name>
			<value>#{diffSource}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>login</managed-bean-name>
		<managed-bean-class>org.sai.pumpkinx.ui.beans.LoginController</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>diffArtifacts</managed-bean-name>
		<managed-bean-class>org.sai.pumpkinx.ui.beans.DiffArtifactsController</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
		<managed-property>
			<property-name>diffSource</property-name>
			<value>#{diffSource}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>createRelease</managed-bean-name>
		<managed-bean-class>org.sai.pumpkinx.ui.beans.CreateReleaseController</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>viewRelease</managed-bean-name>
		<managed-bean-class>org.sai.pumpkinx.ui.beans.ViewReleaseController</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>searchReleaseNotes</managed-bean-name>
		<managed-bean-class>org.sai.pumpkinx.ui.beans.SearchReleaseNotesController</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>searchFeatures</managed-bean-name>
		<managed-bean-class>org.sai.pumpkinx.ui.beans.SearchFeaturesController</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>diffSource</managed-bean-name>
		<managed-bean-class>org.sai.pumpkinx.ui.beans.DiffSource</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<application>
		<action-listener>org.primefaces.application.DialogActionListener</action-listener>
		<navigation-handler>org.primefaces.application.DialogNavigationHandler</navigation-handler>
		<view-handler>org.primefaces.application.DialogViewHandler</view-handler>
	</application>
	<converter>
		<converter-id>artifactConverter</converter-id>
		<converter-class>org.sai.pumpkinx.ui.converters.ArtifactConverter</converter-class>
	</converter>
</faces-config>